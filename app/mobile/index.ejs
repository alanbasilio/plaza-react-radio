<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Nightwave Plaza</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" type="text/css" href="<%= mix['/css/dist.css'].substring(1) %>">
    <link rel="stylesheet" type="text/css" href="<%= mix['/css/app.css'].substring(1) %>">
</head>
<body>
    <div id="app">
        <app></app>
    </div>
    <script>
      window['plaza'] = {
        vue: {},

        push: function(action, data) {
          if (action === 'openWindow') {
            this.vue.openWindow(data.window);
          }

          if (action === 'closeWindow') {
            this.vue.closeWindow(data.window);
          }

          this.vue.pushData(action, data);
        }
      };
    </script>
    <script src="<%= mix['/js/manifest.js'].substring(1) %>"></script>
    <script src="<%= mix['/js/vendor.js'].substring(1) %>"></script>
    <script src="<%= mix['/js/app.js'].substring(1) %>"></script>
</body>
</html>
